<%- include("includes/header") %>

<link rel="stylesheet" type="text/css" href="/css/login.css">

    <body>
        <form class="login_container" action="/resto/login", method="POST"> <!-- browserdan 'Kirish' buttonni bossak - shu form ishga tushadi, '/resto/login'ga post bo'ladi -->
            <div class="login_frame">
                <div class="login_top">
                    <span>Saytga kirish</span>
                    <div>Bosh sahifaga qaytish <a href="/resto" style="color: #6440fb;">Home</a> </div>
                    <p>Ro'yhatdan o'tmaganmisiz? <a href="/resto/signup" style="color: #6440fb;">Ro'yhatdan o'tish</a> </p>
                </div>

                <div class="login_input_frame">
                    <div class="login_input_container">
                        <label>Username:</label>
                        <input type="text" name="mb_nick" placeholder="Username" value="" required/>
                    </div>
                    <div class="login_input_container">
                        <label>Password:</label>
                        <input type="password" name="mb_password" placeholder="Password" value="" required/>
                    </div>
                </div>

                <button class="login_btn btn" name="login" type="submit">Kirish</button>
            </div>
        </form>
    </body>

